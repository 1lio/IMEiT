<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkD"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.SearchView
        android:id="@+id/mSearch"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorT"
        android:persistentDrawingCache="none"
        app:defaultQueryHint="Поиск" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mSearch"
        android:layout_marginTop="4dp" />

    <RelativeLayout
        android:id="@+id/prepodinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarkD"
        android:orientation="vertical"
        android:visibility="gone">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorT"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="6dp">

                        <ImageView

                            android:id="@+id/imgP"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_margin="2dp"
                            app:srcCompat="@drawable/maska" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <TextView

                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="bottom|left"
                                android:textColor="@color/colorTes"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/subname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top|left"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorNewstitle"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:background="@color/colorT"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/p1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Рабочий телефон"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="+7 (47467) 2-81-72"
                                android:textColor="@color/colorTextSub"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="right|center"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="4dp"
                                android:gravity="right|center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/im1"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/oval"
                                    android:elevation="1dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_local_phone_black_24dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="@color/colorT"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/p4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Адрес электронной почты"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/textView49"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="kmaiem12@mail.ru"
                                android:textColor="@color/colorTextSub"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="right|center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/im4"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/oval"
                                    android:elevation="1dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_email_black_24dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="@color/colorT"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/p5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Адрес рабочий"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="г. Елец, ул. Ленина, д. 86, (УК №4), ауд. 14"
                                android:textColor="@color/colorTextSub"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="right|center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/oval"
                                    android:elevation="1dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_map_black_24dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cf_cmt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorT"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/icon_caf"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="6dp"
                            android:background="@drawable/oval"
                            android:backgroundTint="@color/colorSigma"
                            android:elevation="1dp"
                            android:gravity="center"
                            android:padding="12dp" />

                        <TextView
                            android:id="@+id/name_caf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:paddingRight="16dp"
                            android:textColor="@color/colorTes"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="Научная специальность:"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="02.00.02 Аналитическая химия"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="Уровень образования:"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="Высшее образование - специалитет  "
                        android:textColor="@color/colorTes"
                        android:textSize="13sp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="Квалификация:"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="инженер-эколог"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="Направление подготовки и (или) специальности:"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorT"
                        android:gravity="left|center"
                        android:padding="6dp"
                        android:text="Охрана окружающей среды и рациональное использование природных ресурсов"
                        android:textColor="@color/colorTes"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/oval"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    </RelativeLayout>


</RelativeLayout>
