<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/admin_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_date_change"
        android:orientation="vertical"
        android:visibility="gone">

        <Switch
            android:id="@+id/sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDarkA"
            android:checked="true"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:text="Администратор"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/gu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTransparent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ch - Изменяемое | Md - Обязательное"
                android:textAlignment="center"
                android:textColor="@color/colorTextSub"
                android:textSize="10sp"
                android:typeface="monospace" />

            <CheckBox
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Обновить на сервере"
                android:textSize="10sp"
                android:typeface="monospace" />

            <CheckBox
                android:id="@+id/setDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сделать по умолчанию"
                android:textSize="10sp"
                android:typeface="monospace" />

            <CheckBox
                android:id="@+id/neverUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Запретить пользователю редактировать"
                android:textSize="10sp"
                android:typeface="monospace" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/b_date_change"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Дата последнего изменения: 01.09.2019"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorPrimary"
            android:text="Default" />

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorPrimary"
            android:text="SAVE" />

    </LinearLayout>

</LinearLayout>