<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorT"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/maska" />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/maska" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/m_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textColor="@color/colorTes"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="0000" />

                    <TextView
                        android:id="@+id/m_p1_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textColor="@color/colorTextSub"
                        android:textSize="10sp"
                        tools:text="0000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/m_p1_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorTes"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="0000" />

                    <TextView
                        android:id="@+id/m_p1_k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorTextSub"
                        android:textSize="12sp"
                        tools:text="0000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_l1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorNewstitle"
                android:orientation="vertical"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/m_l_1z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/m_p1z"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textColor="@color/colorTes"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="0000" />

                    <TextView
                        android:id="@+id/m_p1_az"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:textColor="@color/colorTextSub"
                        android:textSize="12sp"
                        tools:text="0000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/m_p1_tz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorTes"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="0000" />

                    <TextView
                        android:id="@+id/m_p1_kz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorTextSub"
                        android:textSize="12sp"
                        tools:text="0000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>