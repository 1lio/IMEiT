<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/menu</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TextCurrentPair">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>