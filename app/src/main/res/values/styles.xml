<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeWrithe" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryA</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkA</item>
        <item name="colorAccent">@color/colorPrimaryA</item>

        <item name="android:textColor">@color/colorTextBlack</item>

        <item name="android:colorBackground">@color/colorWhitee</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhitee</item>
        <item name="android:colorForeground">@color/colorNewstitle</item>
        <item name="android:textColorSecondary">@color/colorNewstitle</item>
        <item name="android:dialogTheme">@style/DialogStyle2</item>
        <item name="android:alertDialogTheme">@style/DialogStyle2</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkD</item>
        <item name="colorAccent">@color/colorAccentD</item>
        <item name="toolbarStyle">@style/ToolbarSuleS</item>

        <item name="android:textColor">@color/colorWhitee</item>

        <item name="android:colorBackground">@color/colorSigma</item>
        <item name="android:colorForeground">@color/colorNewstitle</item>
        <item name="android:textColorSecondary">@color/colorNewstitle</item>

        <item name="android:dialogTheme">@style/DialogStyle2</item>
        <item name="android:alertDialogTheme">@style/DialogStyle2</item>

    </style>

    <style name="DialogStyle2" parent="android:Theme.Material.Dialog">
        <item name="android:textColor">#FFFF</item>
        <item name="android:colorAccent">@color/colorPrimaryA</item>
        <item name="android:textColorPrimary">@color/colorNewstitle</item>
        <item name="android:background">@color/colorSigma</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TextWrithe">
        <item name="android:textColor">@color/colorWhitee</item>
        <item name="android:textColorSecondary">@color/colorNewstitle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarSule" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarSuleS" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryD</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MenuLine">
        <item name="android:textColor">@color/colorTextSub</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
