<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeWrithe" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryA</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkA</item>
        <item name="colorAccent">@color/colorPrimaryA</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorSecondary">@color/colorTextSub</item>
        <!--Костыль colorError в роли атрибута для NavView -->
        <item name="colorError">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorIconTint</item>

        <item name="android:statusBarColor">@color/colorPrimaryDarkA</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorTextSub</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <!--ColorPrimary устанавливается в качестве заголовка тулбар-->
        <item name="android:textColorPrimary">@color/colorWhite</item>

        <!--Костыль-->
        <item name="colorError">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Ff1SpinnerViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
